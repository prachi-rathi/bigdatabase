[Unit]
Description=MR-jobhistory
After=network.target
Requires=nodemanager.service

[Service]
Type=forking
User=hadoop
Group=hadoop
PermissionsStartOnly=true
ExecStart=/bin/bash -c "source /etc/profile && {{ hadoop_dir }}/{{ hadoop_expended_version }}/sbin/mr-jobhistory-daemon.sh start historyserver"
PIDFile={{ hadoop_dir }}/{{ hadoop_expended_version }}/mapred-hadoop-historyserver.pid
Restart={{ restart[0] }}
RestartSec=30
StartLimitInterval=350
StartLimitBurst=10

[Install]
WantedBy=multi-user.target
